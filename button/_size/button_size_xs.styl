.button_size_xs {
    font-size: 11px;
    padding: 1px 6px;
    font-family: verdana, arial, sans-serif;

    &:active {
        padding: 2px 6px 0px;
    }

    & > .button__arrow {
        width: .95em;
        height: .95em;
    }

    &.button_arrowed,
    &.button_arrowed:active {
        padding-right: 5px;
        margin-right: 4px;
    }

    button&.button_arrowed:active:hover{o-selector-hack} {
        padding-left: 6px;
        padding-right: 5px;
    }
}