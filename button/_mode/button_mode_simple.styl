.button_mode_simple {

    border: none;
    padding: 3px 11px;

    background:\
        -webkit-linear-gradient(top,#f3f3f3,#e1e1e1),\
        -webkit-linear-gradient(top,rgba(0,0,0,0.05),rgba(0,0,0,0.12));
    background:\
        -moz-linear-gradient(top,#f3f3f3,#e1e1e1),\
        -moz-linear-gradient(top,rgba(0,0,0,0.05),rgba(0,0,0,0.12));
    background:\
        -o-linear-gradient(top,#f3f3f3,#e1e1e1),\
        -o-linear-gradient(top,rgba(0,0,0,0.05),rgba(0,0,0,0.12));
    background:\
        linear-gradient(to bottom,#f3f3f3,#e1e1e1),\
        linear-gradient(to bottom,rgba(0,0,0,0.05),rgba(0,0,0,0.12));

    &:hover,
    &:active {
        background-image:\
            -webkit-linear-gradient(top, #eaeaea 0, #d1d1d1 100%),\
            -webkit-linear-gradient(top,rgba(0,0,0,0.08),rgba(0,0,0,0.18));
        background-image:\
            -moz-linear-gradient(top, #eaeaea 0, #d1d1d1 100%),\
            -moz-linear-gradient(top,rgba(0,0,0,0.08),rgba(0,0,0,0.18));
        background-image:\
            -o-linear-gradient(top, #eaeaea 0, #d1d1d1 100%),\
            -o-linear-gradient(top,rgba(0,0,0,0.08),rgba(0,0,0,0.18));
        background-image:\
            linear-gradient(to bottom, #eaeaea 0, #d1d1d1 100%),\
            linear-gradient(to bottom,rgba(0,0,0,0.08),rgba(0,0,0,0.18));
    }

    &:active {
        padding: 3px 11px 1px;
    }

}