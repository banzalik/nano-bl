.popup__tail {
    position: absolute;

    font-size: 11px;

    width: 1em;
    height: 1em;
    clip: rect(0,0,0,0); // Hide until mode set

    &:before {
        content: "";

        position: absolute;
        top: 0;
        left: 0;

        width: 100%;
        height: 100%;

        background: #FFF;

        box-shadow: .2em .2em .8em -.2em #000;
        transform: scale(.65,1) rotate(45deg);
    }
}